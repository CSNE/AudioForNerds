<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>




    <style name="marquee_set">
        <item name="android:ellipsize"> marquee </item>
        <item name="android:singleLine"> true </item>
        <item name="android:fadingEdge"> horizontal </item>
        <item name="android:marqueeRepeatLimit"> marquee_forever </item>
        <item name="android:scrollHorizontally"> true </item>

    </style>
    <style name="singleline_cutstart">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="filter_title">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorDarkPrimaryText</item>
    </style>

    <style name="setting_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="setting_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDarkPrimaryText</item>
    </style>

    <style name="fab_menu"
        >
        <item name="fab_shadowYOffset">0dp</item>
        <item name="fab_shadowXOffset">0dp</item>


        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_colorPressed">@color/colorAccentFallbackLight</item>
        <item name="menu_colorRipple">@color/colorAccentFallbackDark</item>
    </style>
    <style name="fab_sub"
        >
        <item name="fab_shadowYOffset">0dp</item>
        <item name="fab_shadowXOffset">0dp</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccentFallbackLight</item>
        <item name="fab_colorRipple">@color/colorAccentFallbackDark</item>
    </style>
    <style name="playlist_save_input">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="playlist_save_desc">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
