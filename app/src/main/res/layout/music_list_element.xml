<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/music_list_element_container">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/music_list_element_expander"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/music_list_element_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:textColor="@color/colorDarkPrimaryText"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/music_list_element_expander"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/music_list_element_artist"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:textColor="@color/colorDarkSecondaryText"
        android:textSize="12dp"
        android:layout_below="@+id/music_list_element_title"
        android:layout_alignLeft="@+id/music_list_element_title"
        android:layout_alignRight="@+id/music_list_element_title" />

</RelativeLayout>