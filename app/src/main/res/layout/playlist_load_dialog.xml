<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playlist_load_list"
        android:layout_above="@+id/playlist_load_mode"
        android:choiceMode="multipleChoice" ></ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:id="@+id/playlist_load_mode"
        android:layout_above="@+id/textView6">
        <TextView
            style="@style/playlist_save_desc"
            android:text="Mode"
            android:id="@+id/playlist_load_mode_text" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playlist_load_mode_selector" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intersect mode can remove duplicates..\nSubtract mode subtracts from the topmost playlist."
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true" />


</RelativeLayout>