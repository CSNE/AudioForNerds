<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vis_waveform_setting_container">
<!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waveform"
        android:id="@+id/vis_waveform_setting_title"
        style="@style/setting_title"/>
        -->

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_waveform_setting_stereo"
        android:layout_below="@+id/vis_waveform_setting_title">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mono"
            android:id="@+id/vis_waveform_setting_stereo_title"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_waveform_setting_stereo_switch"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <include layout="@layout/subdivider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length"
        android:id="@+id/vis_waveform_setting_length_title"
        android:layout_alignParentLeft="true"
        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vis_waveform_setting_stereo"
        android:id="@+id/vis_waveform_setting_length">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_waveform_setting_length_seekbar"
            android:layout_toLeftOf="@+id/vis_waveform_setting_length_value"
            android:max="1000"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_waveform_setting_length_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>


</LinearLayout>