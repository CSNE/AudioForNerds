    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FFT Size"
        android:id="@+id/vis_spectrum_setting_fftsize_title"
        style="@style/setting_text"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vis_spectrum_setting_fftsize_selector" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of bars"
        android:id="@+id/vis_spectrum_setting_bars_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_spectrum_setting_bars">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_spectrum_setting_bars_seekbar"
            android:layout_toLeftOf="@+id/vis_spectrum_setting_bars_value"
            android:max="300"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_spectrum_setting_bars_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bar Spacing"
        android:id="@+id/vis_spectrum_setting_spacing_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_spectrum_setting_spacing">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_spectrum_setting_spacing_seekbar"
            android:layout_toLeftOf="@+id/vis_spectrum_setting_spacing_value"
            android:max="100"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_spectrum_setting_spacing_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency Start"
        android:id="@+id/vis_spectrum_setting_frq_start_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_spectrum_setting_frq_start">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_spectrum_setting_frq_start_seekbar"
            android:layout_toLeftOf="@+id/vis_spectrum_setting_frq_start_value"
            android:max="1000"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_spectrum_setting_frq_start_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency End"
        android:id="@+id/vis_spectrum_setting_frq_end_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_spectrum_setting_frq_end">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_spectrum_setting_frq_end_seekbar"
            android:layout_toLeftOf="@+id/vis_spectrum_setting_frq_end_value"
            android:max="1000"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_spectrum_setting_frq_end_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>


</LinearLayout>