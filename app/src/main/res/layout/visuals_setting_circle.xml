    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_circle_setting_fftsize_selector"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FFT Size"
            android:id="@+id/vis_circle_setting_fftsize_title"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <include layout="@layout/subdivider"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_circle_setting_log">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Scale"
            android:id="@+id/vis_circle_setting_log_title"
            style="@style/setting_text"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_circle_setting_log_switch"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <include layout="@layout/subdivider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of bars"
        android:id="@+id/vis_circle_setting_bars_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_circle_setting_bars">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_circle_setting_bars_seekbar"
            android:layout_toLeftOf="@+id/vis_circle_setting_bars_value"
            android:max="300"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_circle_setting_bars_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>

    <include layout="@layout/subdivider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency Start"
        android:id="@+id/vis_circle_setting_frq_start_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_circle_setting_frq_start">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_circle_setting_frq_start_seekbar"
            android:layout_toLeftOf="@+id/vis_circle_setting_frq_start_value"
            android:max="1000"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_circle_setting_frq_start_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>

    <include layout="@layout/subdivider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency End"
        android:id="@+id/vis_circle_setting_frq_end_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_circle_setting_frq_end">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_circle_setting_frq_end_seekbar"
            android:layout_toLeftOf="@+id/vis_circle_setting_frq_end_value"
            android:max="1000"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_circle_setting_frq_end_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>

    <include layout="@layout/subdivider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bar Height"
        android:id="@+id/vis_circle_setting_height_title"

        style="@style/setting_text"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_circle_setting_height">

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vis_circle_setting_height_seekbar"
            android:layout_toLeftOf="@+id/vis_circle_setting_height_value"
            android:max="1000"
            style="@style/setting_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/vis_circle_setting_height_value"
            android:layout_alignParentRight="true"
            style="@style/setting_text"/>
    </RelativeLayout>


</LinearLayout>