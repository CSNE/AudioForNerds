<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filter_autogain_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter_autogain_layout">

        <Button
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/filter_autogain_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_close_black_36dp"/>

        <TextView
            android:id="@+id/filter_autogain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Gain"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            style="@style/filter_title"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Automatically adjusts the volume."
            android:textColor="@color/colorDarkSecondaryText"
            android:id="@+id/filter_autogain_warning"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/filter_autogain_title" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
