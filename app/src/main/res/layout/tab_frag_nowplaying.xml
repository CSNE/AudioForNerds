<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.chancorp.audiofornerds.visuals.VisualizationView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/visualization"
        android:layout_below="@+id/tab_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/vis_buttons_temp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VU"
            android:id="@+id/vis_vu" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waveform"
            android:id="@+id/vis_wavef" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spectrum"
            android:id="@+id/vis_spec" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exponential"
            android:id="@+id/vis_specto_exp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear"
            android:id="@+id/vis_specto_lin" />
    </LinearLayout>

</LinearLayout>