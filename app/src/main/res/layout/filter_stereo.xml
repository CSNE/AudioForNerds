<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_stereo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mono Downmix"
            android:id="@+id/filter_stereo_mono"
            android:layout_alignParentTop="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/filter_stereo_reset"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/filter_stereo_mono" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filter_stereo_balance"
            android:layout_toLeftOf="@+id/filter_stereo_reset"
            android:layout_alignTop="@+id/filter_stereo_reset"
            android:layout_alignBottom="@+id/filter_stereo_reset"
            android:max="100"
            android:progress="50" />

</RelativeLayout>
